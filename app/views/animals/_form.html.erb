<%= render 'shared/errors', obj: @animal %>

<%= form_for @animal do |f| %>
<div>
  <div class="form-group row">
    <%= f.label :name, class:"col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= f.text_field :name, class: "form-control", placeholder: "Name", autofocus: true %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :age, class:"col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= f.text_field :age, class: "form-control", placeholder: "Age", autofocus: true %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :gender, class:"col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= f.text_field :gender, class: "form-control", placeholder: "G", autofocus: true %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :description, class:"col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= f.text_area :description, rows: 5, class: "form-control", placeholder: "description", autofocus: true %>
    </div>
  </div>
  <div class="form-group row col-sm-10">
    <%= f.collection_check_boxes :category_ids, Category.all, :id, :name do |cb| %>
      <% cb.label(class: "checkbox-inline input_checkbox") {cb.check_box(class: "checkbox") + cb.text} %>
    <% end %>
  </div>
  <div class="form-group row col-sm-10">
    <%= f.submit class: "btn btn-primary btn-lg"%>
  </div>
</div>
<% end %>

<div align="center">
  [ <%= link_to "cancel request and return to animal listing", animals_path %> ]
</div>
